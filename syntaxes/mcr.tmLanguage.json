{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "JitBit Macro Recorder Script",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"begin": "(COMMENT)( :)",
				"end": ".*\n",
				"beginCaptures": {
					"1": { "name": "comment.line.comment-command.mcr" }
				},
				"endCaptures": {
					"0": { "name": "comment.line.comment-command.mcr" }
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.mcr",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.mcr",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mcr",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.mcr"
}